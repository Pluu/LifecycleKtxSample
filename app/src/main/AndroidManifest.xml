<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pluu.sample.coroutinektx">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CoroutineKtxSample">
        <activity
            android:name=".DemoActivity"
            android:theme="@style/Theme.CoroutineKtxSample">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ktx.PausingDispatcherActivity"
            android:label="1. PausingDispatcher"
            android:theme="@style/Theme.CoroutineKtxSample.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="com.pluu.ui.demos.SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ktx.WithLifecycleStateActivity"
            android:label="2. WithLifecycleState"
            android:theme="@style/Theme.CoroutineKtxSample.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="com.pluu.ui.demos.SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ktx.RepeatOnLifecycleActivity"
            android:label="3. RepeatOnLifecycle (addRepeatingJob)"
            android:theme="@style/Theme.CoroutineKtxSample.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="com.pluu.ui.demos.SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ktx.FlowWithLifecycleActivity"
            android:label="4. RepeatOnLifecycle (flowWithLifecycle)"
            android:theme="@style/Theme.CoroutineKtxSample.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="com.pluu.ui.demos.SAMPLE_CODE" />
            </intent-filter>
        </activity>
    </application>

</manifest>